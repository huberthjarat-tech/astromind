<div class="auth-page">
  <div class="auth-container" style="max-width: 600px;">

    <%# TÃTULO %>
    <div class="auth-header">
      <h1 class="auth-title">Create Your Astrological Profile</h1>
      <p class="auth-subtitle">Your cosmic identity and birth blueprint</p>
    </div>

    <%# FORMULARIO %>
    <div class="auth-form-wrapper">
      <%= form_with model: @profile, url: profile_path, method: :post, local: true, html: { class: 'auth-form' } do |f| %>

        <div class="form-inputs">

          <%# BIRTH DATE & TIME %>
          <div class="input-group">
            <label class="form-label">Birth Date & Time</label>
            <div class="datetime-selects">
              <%= f.datetime_select :birth_datetime,
                                    start_year: Date.today.year,
                                    end_year: 1940,
                                    prompt: { day: 'Day', month: 'Month', year: 'Year', hour: 'Hour', minute: 'Min' },
                                    class: 'datetime-select' %>
            </div>
          </div>

          <%# BIRTH CITY %>
          <div class="input-group">
            <label class="form-label">Birth City</label>
            <%= f.text_field :birth_city,
                            placeholder: "e.g., New York",
                            class: "auth-input" %>
          </div>

          <%# BIRTH COUNTRY %>
          <div class="input-group">
            <label class="form-label">Birth Country</label>
            <%= f.text_field :birth_country,
                            placeholder: "e.g., United States",
                            class: "auth-input" %>
          </div>
        </div>

        <%# SUBMIT BUTTON %>
        <div class="form-actions">
          <%= f.submit "Save Profile", class: "auth-submit-btn" %>
        </div>
      <% end %>

    </div>

  </div>
</div>
