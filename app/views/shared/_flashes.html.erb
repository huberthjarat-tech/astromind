<% if notice %>
<div class="alert alert-info custom-flash alert-dismissible fade show" role="alert">

    <%= notice %>
    <button type="button" class="flash-close-btn" data-bs-dismiss="alert" aria-label="Close">
    x</button>
  </div>
<% end %>
<% if alert %>
    <div class="alert alert-warning custom-flash alert-dismissible fade show" role="alert">
    <%= alert %>
    <button type="button" class="flash-close-btn" data-bs-dismiss="alert" aria-label="Close">
    x </button>
  </div>
<% end %>
