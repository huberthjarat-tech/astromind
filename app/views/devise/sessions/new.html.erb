<div class="auth-page">
  <div class="auth-container">


    <%# TÃTULO %>
    <div class="auth-header">
      <h1 class="auth-title">Welcome Back</h1>
      <p class="auth-subtitle">Sign in to continue your cosmic journey</p>
    </div>

    <%# FORMULARIO %>
    <div class="auth-form-wrapper">
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'auth-form' }) do |f| %>

        <div class="form-inputs">
          <%= f.input :email,
                      required: false,
                      autofocus: true,
                      placeholder: "your@email.com",
                      label: false,
                      input_html: {
                        autocomplete: "email",
                        class: "auth-input"
                      },
                      wrapper_html: { class: "input-group" } %>

          <%= f.input :password,
                      required: false,
                      placeholder: "Enter your password",
                      label: false,
                      input_html: {
                        autocomplete: "current-password",
                        class: "auth-input"
                      },
                      wrapper_html: { class: "input-group" } %>

          <div class="remember-forgot-row">
            <%= f.input :remember_me,
                        as: :boolean,
                        label: "Remember me",
                        wrapper_html: { class: "remember-checkbox" } if devise_mapping.rememberable? %>

            <%= link_to "Forgot password?", new_password_path(resource_name), class: "forgot-link" %>
          </div>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Sign In", class: "auth-submit-btn" %>
        </div>
      <% end %>

      <%# LINKS %>
      <div class="auth-footer">
        <p class="auth-footer-text">
          Don't have an account?
          <%= link_to "Create one", new_registration_path(resource_name), class: "auth-footer-link" %>
        </p>
      </div>
    </div>

  </div>
</div>
